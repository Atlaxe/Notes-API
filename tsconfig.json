{
  "compilerOptions": {
    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module System */
    "module": "commonjs",
    "moduleResolution": "bundler",         
    "target": "ES2020",
    "esModuleInterop": true,           
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Node Environment */
    "lib": ["ES2020"],
    "types": ["node"],                 
    
    /* Output */
    "sourceMap": true,
    "declaration": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Quality of Life */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}